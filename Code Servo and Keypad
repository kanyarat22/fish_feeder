#include <Keypad.h>
#include <Servo.h>
Servo myservo;
const byte ROWS = 4; 
const byte COLS = 4; 
char keys[ROWS][COLS] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};
byte rowPins[ROWS] = {9, 8, 7, 6};
byte colPins[COLS] = {5, 4, 3, 2};
Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );
int Kill = 0;
void setup() {
  Serial.begin(9600);
  myservo.attach(10);
}
void loop() {
  char key = keypad.getKey();
  if (key == '1') {
    Kill = 1;
    delay(1000);
    myservo.write(180);
    delay(500);
    Serial.println(key);
  }
  if (key == '2') {
    Kill = 2;
    delay(3000);
    myservo.write(180);
    delay(500);
    Serial.println(key);
  }
  if (key == '3') {
    Kill = 3;
    delay(6000);
    myservo.write(180);
    delay(500);
    Serial.println(key);
  }
  else{     
  myservo.write(0);  
}
}
